{
  "name": "autotester",
  "version": "0.1.0",
  "description": "Chrome extension for automated web testing",
  "scripts": {
    "clean": "rm -rf dist",
    "webpack": "webpack --config ./builder/webpack.config.js",
    "manifest": "node ./builder/manifest copy",
    "build": "npm run clean && npm run webpack && npm run manifest",
    "watch:webpack": "npm run webpack -- --watch",
    "watch:manifest": "node ./builder/manifest watch",
    "watch": "run-p watch:**"
  },
  "dependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "mocha": "^2.5.3",
    "selenium-webdriver": "^2.53.3"
  },
  "devDependencies": {
    "archiver": "^1.0.0",
    "fs-extra": "^0.30.0",
    "gaze": "^1.1.0",
    "npm-run-all": "^2.3.0",
    "then-chrome": "^1.0.5",
    "webpack": "^1.13.1"
  }
}
