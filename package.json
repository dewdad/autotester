{
  "name": "autotester",
  "version": "0.1.0",
  "description": "Chrome extension for automated web testing",
  "scripts": {
    "clean": "rm -rf dist",
    "webpack": "webpack --config ./builder/webpack.config.js",
    "copy:assets": "node ./builder/assets copy",
    "watch:webpack": "npm run webpack -- --watch",
    "watch:assets": "node ./builder/assets watch",
    "watch": "run-p watch:**",
    "build": "npm run clean && npm run webpack && npm run copy:assets"
  },
  "dependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "mocha": "^2.5.3",
    "selenium-webdriver": "^2.53.3"
  },
  "devDependencies": {
    "archiver": "^1.0.0",
    "express": "^4.14.0",
    "fs-extra": "^0.30.0",
    "gaze": "^1.1.0",
    "multer": "^1.1.0",
    "npm-run-all": "^2.3.0",
    "promises-aplus-tests": "^2.1.2",
    "serve-index": "^1.8.0",
    "sinon": "^1.17.5",
    "then-chrome": "^1.0.5",
    "webpack": "^1.13.1"
  }
}
