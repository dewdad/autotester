{
  "name": "autotester",
  "version": "0.1.0",
  "description": "Chrome extension for automated web testing",
  "repository": {
    "type": "git",
    "url": "git://github.com/vitalets/autotester.git"
  },
  "scripts": {
    "code": "npm run madge",
    "clean": "rimraf $npm_config_outdir",
    "clean-dist": "rimraf dist",
    "madge": "madge --format=cjs --circular src",
    "check-deps": "check-dependencies",
    "webpack": "webpack --config ./builder/webpack.config.js",
    "copy:manifest": "cpx -v src/manifest.json $npm_config_outdir/",
    "copy:test": "cpx -v 'test/**' $npm_config_outdir/test/",
    "copy:mocha": "cpx -v 'node_modules/mocha/mocha.{js,css}' $npm_config_outdir/mocha/",
    "copy:ui": "cpx -v 'src/ui/ui.{html,css}' $npm_config_outdir/ui/",
    "copy-from-selenium": "node ./builder/copy seleniumTests",
    "copy-example": "cpx -v 'example/**' $npm_config_outdir/test/",
    "watch:webpack": "npm run webpack -- --watch",
    "watch:manifest": "npm run copy:manifest -- -w",
    "watch:test": "npm run copy:test -- -w",
    "watch:mocha": "npm run copy:mocha -- -w",
    "watch:ui": "npm run copy:ui -- -w",
    "copy": "run-p copy:**",
    "watch": "npm run clean && run-p watch:**",
    "build-unpacked": "npm run clean && npm run webpack && run-p copy:**",
    "build-zip": "npm run build-unpacked && npm run zip",
    "build": "npm run build-zip --outdir=dist/unpacked",
    "zip": "pushd $npm_config_outdir && rimraf ../autotester.zip && zip -rT ../autotester.zip . && popd",
    "fileserver": "node ./node_modules/selenium-webdriver/lib/test/fileserver.js"
  },
  "dependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "mocha": "^2.5.3",
    "selenium-webdriver": "^2.53.3"
  },
  "devDependencies": {
    "archiver": "^1.0.0",
    "assert": "^1.4.1",
    "check-dependencies": "^0.12.0",
    "chnl": "^0.1.14",
    "cpx": "^1.3.2",
    "escape-string-regexp": "^1.0.5",
    "express": "^4.14.0",
    "fs-extra": "^0.30.0",
    "gaze": "^1.1.0",
    "ghooks": "^1.3.2",
    "keymirror": "^0.1.1",
    "madge": "^0.6.0",
    "material-ui": "^0.15.2",
    "multer": "^1.1.0",
    "npm-run-all": "^2.3.0",
    "promises-aplus-tests": "^2.1.2",
    "react": "^15.3.0",
    "react-dom": "^15.3.0",
    "react-tap-event-plugin": "^1.0.0",
    "rimraf": "^2.5.4",
    "serve-index": "^1.8.0",
    "sinon": "^1.17.5",
    "then-chrome": "^1.0.5",
    "webpack": "^1.13.1"
  },
  "config": {
    "foo" : "3000",
    "ghooks": {
      "pre-commit": "npm run code"
    }
  },
  "license": "MIT"
}
