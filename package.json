{
  "name": "autotester",
  "version": "0.1.0",
  "description": "Chrome extension for automated web testing",
  "scripts": {
    "clean": "rm -rf dist",
    "webpack": "webpack --config ./builder/webpack.config.js",
    "watch:webpack": "npm run webpack -- --watch",
    "copy:manifest": "cpx -v src/manifest.json dist/unpacked/",
    "watch:manifest": "cpx -v -w src/manifest.json dist/unpacked/",
    "copy:test": "cpx -v 'test/**' dist/unpacked/test/",
    "watch:test": "cpx -v -w 'test/**' dist/unpacked/test/",
    "copy:mocha": "cpx -v 'node_modules/mocha/mocha.{js,css}' dist/unpacked/mocha/",
    "copy:ui": "cpx -v 'src/ui/ui.{html,css}' dist/unpacked/ui/",
    "watch:ui": "cpx -v -w 'src/ui/ui.{html,css}' dist/unpacked/ui/",
    "copy": "npm run copy:manifest && npm run copy:test && npm run copy:mocha",
    "watch": "run-p watch:**",
    "build": "npm run clean && npm run webpack && npm run copy"
  },
  "dependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "mocha": "^2.5.3",
    "selenium-webdriver": "^2.53.3"
  },
  "devDependencies": {
    "archiver": "^1.0.0",
    "cpx": "^1.3.2",
    "express": "^4.14.0",
    "fs-extra": "^0.30.0",
    "gaze": "^1.1.0",
    "material-ui": "^0.15.2",
    "multer": "^1.1.0",
    "npm-run-all": "^2.3.0",
    "promises-aplus-tests": "^2.1.2",
    "react": "^15.3.0",
    "react-dom": "^15.3.0",
    "react-tap-event-plugin": "^1.0.0",
    "serve-index": "^1.8.0",
    "sinon": "^1.17.5",
    "then-chrome": "^1.0.5",
    "webpack": "^1.13.1"
  }
}
