{
  "name": "autotester",
  "version": "0.1.0",
  "description": "Chrome extension to develop and run functional tests on javascript",
  "repository": {
    "type": "git",
    "url": "git://github.com/vitalets/autotester.git"
  },
  "scripts": {
    "code": "npm run check-deps && npm run madge && npm run only",
    "clean": "rimraf $npm_config_outdir",
    "clean-dist": "rimraf dist",
    "madge": "madge --format=cjs --circular src",
    "check-deps": "check-dependencies",
    "only": "if [ \"$(git diff --cached -- '*.js'| grep + | grep .only)\" != \"\" ]; then echo 'remove .only' && exit 1; fi",
    "webpack": "webpack --config ./builder/webpack.config.js",
    "copy:manifest": "cpx -v src/manifest.json $npm_config_outdir/",
    "copy:mocha": "cpx -v 'node_modules/mocha/mocha.{js,css}' $npm_config_outdir/core/mocha/",
    "copy:ui": "cpx -v 'src/ui/ui.{html,css}' $npm_config_outdir/core/ui/",
    "copy-selftest": "cpx -v 'test/**' $npm_config_outdir/test/",
    "copy-from-selenium": "node ./builder/copy seleniumTests",
    "copy-example": "cpx -v 'example/**' $npm_config_outdir/test/",
    "watch:webpack": "npm run webpack -- --watch",
    "watch:manifest": "npm run copy:manifest -- -w",
    "watch:selftest": "npm run copy-selftest -- -w",
    "watch:mocha": "npm run copy:mocha -- -w",
    "watch:ui": "npm run copy:ui -- -w",
    "copy": "run-p copy:** && npm run copy-test",
    "copy-test": "if [[ -n $npm_config_copytest ]]; then npm run copy-$npm_config_copytest; fi",
    "watch": "npm run clean && run-p watch:**",
    "fileserver": "node ./node_modules/selenium-webdriver/lib/test/fileserver.js",
    "dev": "run-p watch fileserver",
    "build-unpacked": "npm run clean && npm run webpack && npm run copy",
    "zip": "pushd $npm_config_outdir && rimraf $npm_config_outzip && zip -rT $npm_config_outzip . && popd",
    "build-zip": "npm run build-unpacked && npm run zip",
    "build-update": "npm run build-zip --outdir=dist/unpacked --outzip=../autotester.zip",
    "build-with-example": "npm run build-zip --outdir=dist/unpacked --copytest=example --outzip=../autotester-with-example.zip"
  },
  "dependencies": {},
  "devDependencies": {
    "archiver": "^1.0.0",
    "assert": "^1.4.1",
    "check-dependencies": "^0.12.0",
    "chnl": "^0.1.14",
    "cpx": "^1.3.2",
    "escape-string-regexp": "^1.0.5",
    "express": "^4.14.0",
    "fs-extra": "^0.30.0",
    "gaze": "^1.1.0",
    "ghooks": "^1.3.2",
    "json-stringify-safe": "^5.0.1",
    "keymirror": "^0.1.1",
    "madge": "^0.6.0",
    "marked": "^0.3.6",
    "material-ui": "^0.15.2",
    "mocha": "^3.0.2",
    "multer": "^1.1.0",
    "npm-run-all": "^2.3.0",
    "promises-aplus-tests": "^2.1.2",
    "react": "^15.3.0",
    "react-dom": "^15.3.0",
    "react-tap-event-plugin": "^1.0.0",
    "rimraf": "^2.5.4",
    "selenium-webdriver": "^3.0.0-beta-2",
    "serve-index": "^1.8.0",
    "sinon": "^1.17.5",
    "then-chrome": "^1.0.5",
    "webpack": "^1.13.1"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run code"
    }
  },
  "license": "MIT"
}
