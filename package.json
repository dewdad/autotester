{
  "name": "autotester",
  "version": "0.1.0",
  "description": "Chrome extension for automated web testing",
  "scripts": {
    "copy-mocha": "cp node_modules/mocha/mocha.{js,css} src/libs/",
    "copy-chai": "cp node_modules/chai/chai.js src/libs/",
    "copy-libs": "npm run copy-mocha && npm run copy-chai",
    "build": "npm run copy-libs",
    "build-google": "node build-scripts/runner.js zip-google"
  },
  "dependencies": {
    "chai": "^3.5.0",
    "mocha": "^2.5.3"
  },
  "devDependencies": {
    "archiver": "^1.0.0",
    "fs-extra": "^0.30.0"
  }
}
